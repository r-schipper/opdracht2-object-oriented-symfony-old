{% extends 'base.html.twig' %}

{% block title %}Chalet.nl Praktijkopdracht{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Chalet.nl Praktijkopdracht</h1>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">accommodatie</th>
                    <th scope="col">land</th>
                    <th scope="col">skigebied</th>
                    <th scope="col">plaats</th>
                    <th scope="col">afbeelding</th>
                </tr>
            </thead>
            {% for accommodaties_row in accommodaties %}
                <tbody>
                    <tr>
                        <td>{{ accommodaties_row.Accommodatie }}</td>
                        <td>{{ accommodaties_row.Land }}</td>
                        <td>{{ accommodaties_row.Skigebied }}</td>
                        <td>{{ accommodaties_row.Plaats }}</td>
                        <td><img width="100" src="{{ accommodaties_row.Afbeelding }}"></td>
                    </tr>
                </tbody>
            {% endfor %}
        </table>

        <a href="/accommodaties.xml">Gegevens downloaden als XML</a>
    </div>
</table>
{% endblock %}
